<div class="banner">
  <div class="btn-create">
    <h3> <%= link_to new_cocktail_path(@cocktails) do%>
      <i class="fas fa-cocktail"></i>
      <% end %>
    </h3>
    <h2>Lecocktailst</h2>
  </div>
</div>

<div class="container">
  <div class="cards mt-3 mx-3">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.key? %>
        <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
        <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>
<div>
  <%= render "footer" %>
</div>
