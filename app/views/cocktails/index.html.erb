<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to new_cocktail_path(@cocktails), class: "btn nav-link" do%>
        <i class="fas fa-cocktail"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="">
  <h1>Cocktails</h1>
</div>
<div class="container">
  <div class="cards mt-3 mx-3">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.key? %>
        <% background_url = cl_image_path cocktail.photo.key, width: 400, height: 500, crop: :fill %>
        <% else %>
        <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>
<div>
  <%= render "footer" %>
</div>
