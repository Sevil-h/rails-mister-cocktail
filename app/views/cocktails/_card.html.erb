<div class="container">
  <div class="row">
    <div class="col-8">
      <h3>Recipe</h3>
        <table>
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%=  dose.ingredient.name %></td>
                <td><%=  dose.description %></td>
                <td><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="delete fa fa-trash destroy_dose"></i>
                <% end %></td>
              </tr>
              <% end %>
        </tbody>
      </table>
    </div>
    <div class="container">
    <div class="row">
      <div class="col-8">
        <h4>Add a new dose</h4>
          <%= simple_form_for [@cocktail, @dose] do |f|%>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.button :submit %>
          <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
